<div id="supply-curve-view" class="view">

  <!-- intro -->
  <section class="intro intro-production">
    <div class="overlay-dark">
      <div class="prose prose-centered">
        <h1 class="prose-prime-title">Viewing Total Emissions</h1>
        <p class="copy-feature">The global oil and gas industry produces nearly 160 million barrels of oil equivalent a day. The OCI<sup>+</sup> showcases a range of oil and gas resources currently in production. Use this chart to view the estimated total GHG emissions per barrel oil equivalent or per megajoule of produced oil and gas, filtering by region or resource category. Plot emissions using 100- or 20-year global warming potentials. Hover over each bar to see estimated total emissions or navigate to a page summarizing detailed emissions.</p>
      </div>
      <div class="attribution"><a href="https://www.mapbox.com/about/maps/" target="_blank">© Mapbox</a><a href="https://www.digitalglobe.com/" target="_blank">© DigitalGlobe</a></div>
    </div>
  </section>
  <!--/ intro -->

  <!-- chart-section -->
  <section class="section-content has-aside" id="sc-chart-cont">
    <div class="row">
      <header class="panel-header">
        <div class="panel-headline">
          <h1 class="panel-title">Chart</h1>
        </div>
      </header>

      <div class="panel-body">
        <div id="supply-curve" class="data-charts">
          <span class="button button-small button-filter">Filter Chart</span>
          <div id="no-results-message">
            <p>There are currently no oils that match your filter requirements.</p>
          </div>
        </div>
      </div>

      <div class="filter-hideable filter-hidden">
        <h3 class="header-filter">Filter Oil and Gas</h3>

        <div class="control-section">
          <fieldset id="ratio-select">
            <legend class="control-title">Select Units</legend>
            <div class="radio">
              <label><input type="radio" name="ratio-select" value="perBarrel" checked> GHGs/BOE</label>
            </div>
            <div class="radio">
              <label><input type="radio" name="ratio-select" value="perMJ"> GHGs/Megajoule Processed Oil and Gas</label>
            </div>
          </fieldset>
        </div>

        <div class="control-section">
          <fieldset id="region-select">
            <legend class="control-title">Filter by Region</legend>
            <% regions.forEach(region => { %>
              <div class="checkbox">
                <label><input type="checkbox" name="region-select" value="<%= region %>"> <%= region %></label>
              </div>
            <% }) %>
          </fieldset>
        </div>

        <div class="control-section">
          <fieldset id="oiltype-select">
            <legend class="control-title">Filter by Resource Type</legend>
            <% types.forEach(type => { %>
              <div class="checkbox">
                <span class="swatch"></span>
                <label><input type="checkbox" name="oiltype-select" value="<%= type %>"><span class="block-color" style="background-color: <%= getColor(type) %>"></span> <%= type %></label>
              </div>
            <% }) %>
          </fieldset>
        </div>

        <div class="control-section">
          <fieldset id="group-select">
            <legend class="control-title">Filter by Oil or Gas</legend>
            <div class="checkbox">
              <label><input type="checkbox" name="group-select" value="Oil"> Oil</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="group-select" value="Gas"> Gas</label>
            </div>
          </fieldset>
        </div>

        <!-- model-parameters -->
        <!-- single hardcoded GWP switch, always open -->
        <div id="model-parameters" class="control-section open">
          <div class="mp-edit">
              <div class="param-control icon-gwp">
                <div class="container-filter_title">
                  <strong class="param-title">Global Warming Potential</strong>
                  <span data-title-before="Select whether a 20 or 100 year Global Warming Potential is used to assess impact of non-CO2 emissions" class="icon-information">?</span>
                </div>
                 <label class="switch gwp-override" for="toggle-gwp">
                   <input id="toggle-gwp" type="checkbox" unchecked />
                   <span class="switch-text">Global Warming Potential</span>
                   <span class="switch-ui"></span>
                 </label>
              </div>
          </div>
        </div>
        <!--/ model-parameters -->
      </div>

    </div>
  </section>
  <!--/ chart-section -->
  <%= blueBar %>
</div>
